<RelativeLayout
        android:id="@+id/hiddenTaskInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/hiddenTaskInfoBody"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkScreenColor"/>

        <ScrollView
            android:id="@+id/moreTaskInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="600dp"
            android:layout_margin="20dp"
            android:background="@drawable/border_default"
            android:layout_centerInParent="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/taskName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="[Titulo da Tarefa]" /> <!-- Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descrição:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/taskDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:textSize="12sp"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="2dp"
                        android:text="[Descrição]"/>
                </LinearLayout> <!-- Description -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/taskStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:textSize="12sp"
                        android:text="[Status da tarefa]"/>
                </LinearLayout> <!-- Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inicio da tarefa:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/taskBeginDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:textSize="12sp"
                        android:text="[Data de inicio da tarefa]"/>
                </LinearLayout> <!-- Begin date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empresa:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/taskEnterprise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:textSize="12sp"
                        android:text="[Data de inicio da tarefa]"/>
                </LinearLayout> <!-- Enterprise -->
                <LinearLayout
                    android:tag="responsible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Responsável:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/taskResponsible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:textSize="12sp"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="2dp"
                        android:text="[Nome do responsável]" />
                </LinearLayout> <!-- Responsible -->
                <ImageView
                    android:id="@+id/taskPhoto"
                    android:visibility="gone"
                    android:tag="photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="10dp" /> <!-- Photo -->
                <include
                    android:id="@+id/employee_signature"
                    layout="@layout/reuse_signature_read"
                    android:visibility="visible" /> <!-- Employee Signature -->
                <include
                    android:id="@+id/client_signature"
                    layout="@layout/reuse_signature_read"
                    android:visibility="gone"/> <!-- Client Signature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fim da tarefa:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/taskEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:text="[datetime]" />
                </LinearLayout> <!-- Last update -->

            </LinearLayout>
        </ScrollView>
    </RelativeLayout> <!-- Read Task -->
