<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/BackgroundTheme"
    tools:context=".fragment.EnterprisesFragment">

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:src="@drawable/icon_add" />
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Produtos"
                android:padding="16dp"
                android:layout_gravity="top"
                android:textStyle="bold"
                android:textSize="32sp" />

            <LinearLayout
                android:id="@+id/searchProductBox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/header"
                android:background="@drawable/border_edit"
                android:layout_margin="10dp"
                android:elevation="8dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/icon_loupe"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="start|center"
                    android:theme="@style/DefaultIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <EditText
                    android:id="@+id/searchProducts"
                    android:paddingHorizontal="10dp"
                    android:textSize="16sp"
                    android:hint="Buscar por Produtos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout> <!-- Header -->
        <include
            layout="@layout/reuse_fragment"
            android:id="@+id/productsRecycle"/>
    </RelativeLayout> <!-- Main Product -->
    <RelativeLayout
        android:id="@+id/hiddenProductInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/hiddenProductInfoBody"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkScreenColor"/>
        <LinearLayout
            android:id="@+id/moreProductInfo"
            android:layout_margin="20dp"
            android:scrollbars="vertical"
            android:padding="20dp"
            android:background="@drawable/border_default"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Mais Detalhes"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modelo:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/productModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="[Modelo do produto]"/>
            </LinearLayout> <!-- Product Model -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protocolo:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/productProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="[Protocolo]"/>
            </LinearLayout> <!-- Protocol -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fabricante:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/productManufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="[Fabricante]"/>
            </LinearLayout> <!-- Product Manufacturer -->
        </LinearLayout>
    </RelativeLayout> <!-- More info Product -->
    <RelativeLayout
        android:id="@+id/hiddenCreateProductLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/hiddenCreateProductBody"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkScreenColor"/> <!-- hidden gray layout -->

        <ScrollView
            android:id="@+id/createProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border_default"
            android:layout_centerInParent="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Criar Produto"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Preencha as informações abaixo para cadastrar um novo produto" />
                </LinearLayout> <!-- Titulo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Nome do Modelo *"/>
                    <EditText
                        android:id="@+id/newProductName"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:elevation="4dp"
                        android:hint="Nome do Modelo*"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edit"
                        android:layout_marginVertical="2dp"
                        android:textColorHint="@color/textColorHint" />
                </LinearLayout> <!-- Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Protocolo de Comunicação*"/>
                    <EditText
                        android:id="@+id/newProductProtocol"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="16dp"
                        android:hint="Protocolo*"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edit"
                        android:elevation="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:textColorHint="@color/textColorHint" />
                </LinearLayout> <!-- Document -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Fabricante *"/>
                    <Spinner
                        android:id="@+id/newProductManufacturer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        style="@style/CustomSpinner"
                        android:background="@drawable/border_default"
                        android:elevation="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout> <!-- Product Manufacture -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end|center">

                    <Button
                        android:id="@+id/cancelNewProductButton"
                        android:layout_marginEnd="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomButton"
                        android:background="@android:color/transparent"
                        android:textColor="@color/red"
                        android:text="Cancelar"/>
                    <Button
                        android:id="@+id/createNewProductButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomButton"
                        android:background="@android:color/transparent"
                        android:textColor="@color/blue"
                        android:text="Criar"/>

                </LinearLayout> <!-- Buttons -->
            </LinearLayout>
        </ScrollView>
    </RelativeLayout> <!-- Create Product -->
    <RelativeLayout
        android:id="@+id/hiddenEditProductLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/hiddenEditProductBody"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkScreenColor"/> <!-- hidden gray layout -->

        <ScrollView
            android:id="@+id/editProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border_default"
            android:layout_centerInParent="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Editar Produto"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Preencha as informações abaixo para editar o produto" />
                </LinearLayout> <!-- Titulo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Nome do Modelo *"/>
                    <EditText
                        android:id="@+id/editProductName"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:elevation="4dp"
                        android:hint="Nome do Modelo*"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edit"
                        android:layout_marginVertical="2dp"
                        android:textColorHint="@color/textColorHint" />
                </LinearLayout> <!-- Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Protocolo de Comunicação*"/>
                    <EditText
                        android:id="@+id/editProductProtocol"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="16dp"
                        android:hint="Protocolo*"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edit"
                        android:elevation="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:textColorHint="@color/textColorHint" />
                </LinearLayout> <!-- Document -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Fabricante *"/>
                    <Spinner
                        android:id="@+id/editProductManufacture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        style="@style/CustomSpinner"
                        android:background="@drawable/border_default"
                        android:elevation="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout> <!-- Product Manufacture -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end|center">

                    <Button
                        android:id="@+id/cancelEditProductButton"
                        android:layout_marginEnd="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomButton"
                        android:background="@android:color/transparent"
                        android:textColor="@color/red"
                        android:text="Cancelar"/>
                    <Button
                        android:id="@+id/editProductButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomButton"
                        android:background="@android:color/transparent"
                        android:textColor="@color/blue"
                        android:text="Salvar"/>

                </LinearLayout> <!-- Buttons -->
            </LinearLayout>
        </ScrollView>
    </RelativeLayout> <!-- Edit Product -->
    <include
        layout="@layout/reuse_loading"
        android:id="@+id/loading"/>

</FrameLayout>